{% for album in albums %}
	<tr>
		<td>
			<div class="media" id="album-{{ album.album_id }}"
				 data-toggle="collapse" data-target="#album-{{ album.album_id }}-photos">
				<a class="media-left" href="{{ album.links.cover_link }}">
					<img class="media-heading" src="http://img-fotki.yandex.ru/get/28292/228271972.0/0_1534d9_ed496374_XXS" alt="Обложка альбома" width="75" height="75">
				</a>
				<div class="media-body">
					<h4 class="media-heading">{{ album.title }}</h4>
					{{ album.description }}
					<h6 class="media-bottom">
						Author:
						<small class="text-muted">{{ album.author }}</small>
					</h6>
				</div>
			</div>

			<div class="collapse m-t-1" id="album-{{ album.album_id }}-photos"
				 data-album-id="{{ album.album_id }}">
				<div class="container">

				</div>
			</div>
		</td>
	</tr>
{% endfor %}